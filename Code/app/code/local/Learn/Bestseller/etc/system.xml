<?xml version="1.0"?>
<config>
    <tabs>
        <myconf_vijaystore translate="label" module="bestseller">
            <label>Vijay</label>
            <sort_order>100</sort_order>
        </myconf_vijaystore>
    </tabs>	
	
    <sections>
        <bestseller_tab translate="label" module="bestseller">
            <label>Bestseller Products</label>
            <tab>myconf_vijaystore</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <bestseller_setting translate="label comment">
                    <label>Bestseller Products Setting</label>
                    <sort_order>503</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                      <bestseller_active translate="label comment">
                            <label>Bestseller Products</label>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bestseller_active>
						<bestseller_position translate="label comment">
                            <label>Display In</label>
							<frontend_type>select</frontend_type>
                            <source_model>bestseller/dropdown_position</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </bestseller_position>
						<bestseller_title translate="label comment">
								<label>Title</label>
								<frontend_type>text</frontend_type>
								<validate>required-entry </validate>							
								<sort_order>6</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
						</bestseller_title>
						<bestseller_display_count translate="label comment">
							<label>Product To be Display</label>
							<frontend_type>text</frontend_type>
							<validate>required-entry </validate>	
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</bestseller_display_count> 
                     </fields>
                </bestseller_setting>  
            </groups>
        </bestseller_tab>
    </sections>    
    
    
    <!-- Most Viewd Product Section -->
    <sections>
        <mostviewed_tab translate="label" module="bestseller">
            <label>Most Viewed Products</label>
            <tab>myconf_vijaystore</tab>
            <sort_order>5</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <mostviewed_setting translate="label comment">
                    <label>Most Viewed Products Setting</label>
                    <sort_order>510</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                      <mostviewed_active translate="label comment">
                            <label>Most Viewed Products</label>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mostviewed_active>
						<mostviewed_position translate="label comment">
                            <label>Display In</label>
							<frontend_type>select</frontend_type>
                            <source_model>bestseller/dropdown_position</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mostviewed_position>
						<mostviewed_title translate="label comment">
								<label>Title</label>
								<frontend_type>text</frontend_type>
								<validate>required-entry </validate>							
								<sort_order>6</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
						</mostviewed_title>
						<mostviewed_display_count translate="label comment">
							<label>Product To be Display</label>
							<frontend_type>text</frontend_type>
							<validate>required-entry </validate>	
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</mostviewed_display_count> 
                     </fields>
                </mostviewed_setting>	
            </groups>
        </mostviewed_tab>
    </sections>
</config>